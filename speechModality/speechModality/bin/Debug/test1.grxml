<?xml version="1.0"?>
<grammar xml:lang="pt-PT" version="1.0" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
	<rule id="rootRule" scope="public">
		<one-of>
			<item><ruleref uri="#object"/><tag>out.action=rules.object;</tag> </item>
			<item><ruleref uri="#music"/><tag>out.music=rules.music;</tag></item>
		</one-of>
	</rule>
	<rule id="object">
		<one-of>

			<item>Cone,apetece-me ouvir esta música<item repeat="0-1">por favor</item><tag>out="PLAY"</tag></item>
			
			<item>
				<one-of>
					<item>
						Cone,pausa a música<item repeat="0-1">por favor</item><tag>out="PAUSE"</tag>
					</item>
					<item>
						pausa musica <item repeat="0-1">por favor</item><tag>out="PAUSE"</tag>
					</item>
				</one-of>
			</item>
			
			<item>Cone,continua<item repeat="0-1">por favor</item><tag>out="RESUME"</tag></item>
			
			<item>
				<one-of>
					<item>	
						Cone,podes mudar a música para seguinte<item repeat="0-1">por favor</item><tag>out="NEXT"</tag>
					</item>
					<item>
						proxima musica <item repeat="0-1">por favor</item><tag>out="NEXT"</tag>
					</item>
				</one-of>
			</item>
			<item>Cone,podes mudar a música para anterior<item repeat="0-1">por favor</item><tag>out="PREV"</tag></item>
			<item>Cone,estou a ouvir mal, podes aumentar volume<item repeat="0-1">por favor</item><tag>out="VOLUP"</tag></item>
			<item>Cone,estou a ouvir mal, podes diminuir volume<item repeat="0-1">por favor</item><tag>out="VOLDOWN"</tag></item>
			<item>Cone,podes por a música mais rápido<item repeat="0-1">por favor</item><tag>out="FAST"</tag></item>
			<item>Cone,podes por a música mais lenta<item repeat="0-1">por favor</item><tag>out="SLOW"</tag></item>
			<item>Cone,podes retormar a velocidade<item repeat="0-1">por favor</item><tag>out="VNORMAL"</tag></item>
			<item>Cone,podes voltar repetir a música<item repeat="0-1">por favor</item><tag>out="REPEATON"</tag></item> 
			<item>Cone,já não quero voltar a ouvir esta música de novo<item repeat="0-1">por favor</item><tag>out="REPEATOFF"</tag></item>
			<item>Cone,silêncio<item repeat="0-1">por favor</item><tag>out="MUTE"</tag></item>
			<item>Cone,podes retornar o som<item repeat="0-1">por favor</item><tag>out="SPEAK"</tag></item>
			<item>Cone,podes tocar músicas aleatórias<item repeat="0-1">por favor</item><tag>out="RANDOM"</tag></item>
			<item>Cone,podes cancelar músicas aletórias<item repeat="0-1">por favor</item><tag>out="RANDOMOFF"</tag></item>
			
			<item>Cone,quero saber o nome da música<item repeat="0-1">por favor</item><tag>out="MUSIC_NAME"</tag></item>
			
			<item>Cone,qual é a duração da música<item repeat="0-1">por favor</item><tag>out="TIME_MUSIC"</tag></item>
			<item>Cone,podes fechar a aplicação<item repeat="0-1">por favor</item><tag>out="QUIT"</tag></item>	
			
		</one-of>
	</rule>
	<rule id="music">
		<item>
			<one-of>
				<item>Cone, coloca esta música<tag> out.action = "musica"; </tag></item>
				<item>Cone, poe a música <tag> out.action = "musica"; </tag></item>
			</one-of>
		</item>
		<item>
			<one-of><item>Anthrax  aaaa  Antisocial<tag>out.action2='1'</tag> </item><item>Anthrax  aaaa  Got The Time<tag>out.action2='2'</tag> </item><item>Anthrax  aaaa  Indians<tag>out.action2='3'</tag> </item><item>Chris Stapleton  aaaa  Tennessee Whiskey<tag>out.action2='4'</tag> </item><item>Eminem  aaaa  No Love ft<tag>out.action2='5'</tag> </item><item>Foster The People  aaaa  Pumped up Kicks<tag>out.action2='6'</tag> </item><item>Ghost  aaaa  Call Me Little Sunshine<tag>out.action2='7'</tag> </item><item>Gojira  aaaa  The Chant<tag>out.action2='8'</tag> </item><item>John Denver  aaaa  Take Me Home, Country Roads<tag>out.action2='9'</tag> </item><item>Linkin Park  aaaa  Numb<tag>out.action2='10'</tag> </item><item>Linkin_Park aaaa In_The_End<tag>out.action2='11'</tag> </item></one-of></item></rule></grammar>